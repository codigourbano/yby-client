div.single-feature
	h2 {{feature.title}}
	div.meta.clearfix
		p.author(title='{{"Author" | translate}}', ng-controller='UserCtrl')
			a(href='/user/{{profileUrl(feature.creator)}}/') {{feature.creator.name}}
		p.layer(ng-show='map', title='{{"Layer" | translate}}')
			a(href='/layers/{{feature.layer._id}}/') {{feature.layer.title}}
		p.features(ng-show='feature.featureObjs.length', title='{{"Locations" | translate}}')
			span.feature(ng-repeat='feature in feature.featureObjs')
				a(href='{{baseUrl}}/feature/{{feature._id}}') {{feature.title}}
	div(dynamic='description(feature)')
