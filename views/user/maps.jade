.page-subheader.anti-row.row
	.container
		.twelve.columns
			h2(translate='') Maps
			input.filter(ng-show='maps.length', type='text', ng-model='search', placeholder='{{"Type your search" | translate}}')
			p(ng-show='layers.length', translate='profileTotalMaps', translate-values='{userName: user.name, total: totalMap}')
			p(ng-hide='maps.length')
				| {{user.name}}
				span(translate='') haven't created any maps.
.maps-list(ng-show='maps.length', ng-controller='MapActionsCtrl')
	.container(infinite-scroll='$map.nextPage()', infinite-scroll-disabled='$map.busy', infinite-scroll-distance='1', infinite-scroll-immediate-check='true')
		.three.columns(ng-repeat='map in maps | filter:search')
			div(ng-include='templates.list', autoscroll='false')
.create-map(ng-hide='maps.length')
	.container
		.twelve.columns
			.info-box
				p
					| {{user.name}}
					span(translate='') haven't created any maps.
