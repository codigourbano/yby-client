.page-subheader.anti-row.row
	.container
		.twelve.columns
			h2(translate='') Maps
			input.filter(type='text', ng-model='search', placeholder='{{"Type your search" | translate}}')
			p(translate='userTotalMaps', translate-values='{ totalMap: totalMap }')
.maps-list(ng-show='maps.length', ng-controller='MapActionsCtrl')
	.container(infinite-scroll='$map.nextPage("userMaps")', infinite-scroll-disabled='$map.busy', infinite-scroll-distance='1', infinite-scroll-immediate-check='true')
		.three.columns(ng-show='canCreate')
			.default-item.new-item.row
				h3
					a(href='/maps/new')
						span.lsf î„ˆ
						span(translate='') Create new map
		.three.columns(ng-repeat='map in maps | filter:search')
			div(ng-include='templates.list', autoscroll='false')
.create-map(ng-hide='maps.length', ng-show='canCreate')
	.container
		.twelve.columns
			.info-box.new-item
				p
					a(href='/maps/new', title='{{"New map" | translate}}', translate='') You haven't created maps yet. Click here to create your first.
